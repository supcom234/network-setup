[Unit]
Description=Sonarr Daemon
After=syslog.target network.target

[Service]
User={{ sonarr.user }}
Group={{ sonarr.group }}
Type=simple
ExecStart=/usr/bin/mono {{ sonarr.install_dir }}/bin/NzbDrone.exe -nobrowser -data {{ sonarr.install_dir }}
TimeoutStopSec=20

[Install]
WantedBy=multi-user.target